# ============================================
# Frontend Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control!

# ============================================
# API Configuration
# ============================================
# Backend API base URL (must include /api suffix)
VITE_API_URL=http://localhost:3001/api

# ============================================
# Static Assets Configuration (Optional)
# ============================================
# Base URL for static assets/uploads
# If not set, will use SERVER_URL from VITE_API_URL
# VITE_STATIC_URL=http://localhost:3001

# ============================================
# Firebase Configuration
# ============================================
# Get these values from Firebase Console > Project Settings > General
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app

VITE_FIREBASE_PROJECT_ID=naethra-project-mgmt
VITE_FIREBASE_MESSAGING_SENDER_ID=442949069348
VITE_FIREBASE_APP_ID=1:442949069348:web:b98ea542b1a43ec68206b1
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# ============================================
# Firebase Cloud Messaging (FCM)
# ============================================
# Get VAPID key from Firebase Console > Project Settings > Cloud Messaging > Web Push certificates
# This is required for push notifications
VITE_FIREBASE_VAPID_KEY=your_vapid_key
