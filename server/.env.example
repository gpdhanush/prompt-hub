# ============================================
# Server Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control!

# ============================================
# Database Configuration
# ============================================
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_database_password
DB_NAME=admin_dashboard
DB_PORT=3306
DB_CONNECTION_LIMIT=10

# ============================================
# Server Configuration
# ============================================
PORT=3001
NODE_ENV=development
API_BASE_URL=http://localhost:3001/api

# ============================================
# JWT Configuration
# ============================================
# Generate a secure random string for production (e.g., openssl rand -hex 32)
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# ============================================
# Encryption Configuration
# ============================================
# Generate a 64-character hex string (32 bytes) for encryption key
# Use: openssl rand -hex 32
# IMPORTANT: Keep this key secure! If lost, encrypted data cannot be decrypted.
ENCRYPTION_KEY=

# ============================================
# Firebase Configuration (Backend)
# ============================================
# Path to Firebase service account JSON file (relative to server directory)
# OR paste the entire JSON content as a string
FIREBASE_SERVICE_ACCOUNT=./config/naethra-project-mgmt-firebase-adminsdk-fbsvc-23ea8814a5.json
FIREBASE_SERVICE_ACCOUNT_PATH=

# ============================================
# File Upload Configuration
# ============================================
# Maximum file size in bytes (default: 10MB = 10485760)
MAX_FILE_SIZE=10485760
# Upload directory (relative to server directory)
UPLOAD_DIR=./uploads
# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# ============================================
# CORS Configuration
# ============================================
# Allowed origins (use * for all, or specify comma-separated list)
CORS_ORIGIN=*
# Allow credentials (true/false)
CORS_CREDENTIALS=true
